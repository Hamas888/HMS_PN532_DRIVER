{
  "name": "HMS_PN532_DRIVER",
  "version": "1.0.0",
  "description": "Cross-platform NFC driver. Works on ESP-IDF, STM32 HAL, Arduino, and Linux/Windows.",
  "keywords": [
    "nfc",
    "pn532",
    "ndef",
    "rfid",
    "uart",
    "i2c",
    "spi",
    "embedded",
    "esp32",
    "stm32",
    "nrf52",
    "arduino",
    "avr",
    "platformio"
  ],
  "authors": [
    {
      "name": "Hamas Saeed",
      "email": "hamasaeed888@gmail.com",
      "url": "https://github.com/Hamas888",
      "maintainer": true
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Hamas888/HMS_PN532_DRIVER.git"
  },
  "frameworks": ["arduino", "espidf"],
  "platforms": ["atmelavr","espressif32", "ststm32", "nordicnrf52"],
  "build": {
    "flags": [
      "-std=gnu++17"
    ],
    "unflags": [
      "-std=gnu++11"
    ]
  },
  "license": "MIT",
  "homepage": "https://github.com/Hamas888/HMS_PN532_DRIVER",
  "examples": [
    "examples"
  ],
  "export": {
    "include": [
      "src",
      "include",
      "examples",
      "CMakeLists.txt",
      "library.json",
      "LICENSE",
      "README.md"
    ],
    "exclude": [
      "test",
      ".pio",
      ".vscode"
    ]
  }
}